<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/relativelayout">

    <EditText
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:id="@+id/payeeVPA"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="41dp"
        android:hint="Payee VPA" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/payeeNameEditText"
        android:layout_below="@+id/payeeVPA"
        android:layout_alignStart="@+id/payeeVPA"
        android:layout_alignEnd="@+id/payeeVPA"
        android:hint="Payee Name"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tidEditText"
        android:layout_below="@+id/payeeNameEditText"
        android:layout_alignStart="@+id/payeeNameEditText"
        android:layout_alignEnd="@+id/payeeNameEditText"
        android:hint="Transaction Id"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amountEditText"
        android:layout_below="@+id/tidEditText"
        android:layout_alignStart="@+id/tidEditText"
        android:layout_alignEnd="@+id/tidEditText"
        android:hint="Amount"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay"
        android:id="@+id/payBtn"
        android:layout_below="@+id/amountEditText"
        android:layout_alignStart="@+id/amountEditText"
        android:layout_alignEnd="@+id/amountEditText"
        android:layout_marginTop="10dp" />
</RelativeLayout>
