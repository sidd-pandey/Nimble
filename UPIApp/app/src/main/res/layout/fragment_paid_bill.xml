<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.darkfire.PaidBillFragment">

    <!-- TODO: Update blank fragment layout -->

    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/paidBillGrid"
        android:numColumns="auto_fit"
        android:layout_alignParentStart="true"
        android:textFilterEnabled="false"
        android:verticalSpacing="15dp"
        android:horizontalSpacing="15dp"
        android:layout_below="@+id/savedBillsFragHead"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Saved Bills"
        android:id="@+id/savedBillsFragHead"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />
</RelativeLayout>
